<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
        <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  <%= page_stylesheets %>
  <%= stylesheet_link_tag :all %>
</head>
<body>
    <header id="header">
      <h1>Zipper</h1>

      <div id="player">
          player
      </div>

	  <nav>
		  <% if !signed_in? %>
			<a href="#">Login</a>
			<a href="#" class='signup'>Signup</a>
			<% else%>
			<a href="#" class='signout'>Sign Out</a>
			<% end %>
	  </nav>




    </header>

    <div id="wrap">

         <section id="leftRail">
            <nav>
                <% if current_user %>
                    <a href="#">Home</a>
                    <a href="<%= user_path(session[:user_id]) %>">Profile</a>
                    <%= link_to "Sign Out", signout_path, :class => "nosammy" %>
                <% else %>
                    <%= link_to_sign_in :facebook %>
                    <%= link_to_sign_in :myspace %>
                    <%= link_to_sign_in :twitter %>
                    <%= link_to_sign_in :google %>
                <% end %>
            </nav>
        </section>

        <section id="container" class='clearfix'>
		    <section id="rightRail">
			    <div class='module'>
                    <h3>Example Module</h3>
                </div>
             </section>
            <section id="main">

              <% if current_user %>
              <header>
                 <%= image_tag(current_user.image || 'http://placehold.it/50x50', :height => 50, :width => 50) %>
                 <h2><%= current_user.name %> (<%= current_user.provider.capitalize %>)</h2>
              </header>
              <% end %>

              <%= yield %>
            </section>
         </section>


    </div>

    <%= javascript_include_translations %>
    <script type="text/javascript">
      var currentLocale = '<%= I18n.locale %>';
    </script>
    <%= javascript_include_tag ['jquery','rails', 'sammy', 'sammy/sammy.handlebars', 'sammy/sammy.history_proxy','application'] %>
    <%= page_javascripts %>
</body>
</html>
