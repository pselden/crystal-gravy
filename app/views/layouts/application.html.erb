<!DOCTYPE html>
<html>
<head>
  <title>TestProj</title>
  <%= csrf_meta_tag %>
  <%= page_stylesheets %>
</head>
<body>
    <header>
    <% if current_user %>
        Welcome <%= current_user.name %>! (<%= current_user.provider.capitalize %>)<%= image_tag(current_user.image || 'http://placehold.it/25x25', :height => 25, :width => 25) %>
        <%= link_to "Sign Out", signout_path, :class => "nosammy" %>
    <% else %>
        <%= link_to_sign_in :facebook %>
        <%= link_to_sign_in :myspace %>
        <%= link_to_sign_in :twitter %>
        <%= link_to_sign_in :google %>
    <% end %>
    </header>
    <div id="main">
        <%= yield %>
    </div>
    <footer>
      <a href="/">Home</a>
      <a href="/pages/test">Test</a>
    </footer>

    <%= javascript_include_translations %>
    <script type="text/javascript">
      var currentLocale = '<%= I18n.locale %>';
    </script>
    <%= javascript_include_tag ['jquery','rails', 'sammy', 'sammy/sammy.handlebars', 'sammy/sammy.history_proxy','application'] %>
    <%= page_javascripts %>
</body>
</html>
